<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/idpw_back"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".IdpwActivity">

    <TextView
        android:id="@+id/idpw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idpw_title_login"
        android:textColor="#ed7d31"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idpw_id"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="182dp" />

    <EditText
        android:id="@+id/idpw_in_id"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:background="@drawable/idpw_in_id"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="182dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idpw_pw"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="274dp" />

    <EditText
        android:id="@+id/idpw_in_pw"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:background="@drawable/idpw_in_pw"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="274dp" />

    <Button
        android:layout_width="285dp"
        android:layout_height="54dp"
        android:background="@drawable/idpw_btn_login"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="367dp" />

</android.support.constraint.ConstraintLayout>